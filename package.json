{
  "name": "cybernaut",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "commitmsg": "commitlint --edit",
    "postinstall": "./scripts/copy.sh && lerna bootstrap",
    "clean": "./scripts/clean.sh",
    "compile": "lerna run compile",
    "format": "./scripts/format.sh --write",
    "format:check": "./scripts/format.sh --list-different",
    "lint": "node ./scripts/lint.js && lerna run lint",
    "prerelease": "npm run clean && npm install && npm test",
    "release": "lerna publish --skip-npm && lerna run release",
    "postrelease": "git push --follow-tags origin master",
    "pretest": "npm run compile",
    "test": "npm run format:check && npm run lint && jest --no-cache",
    "watch": "run-p watch:*",
    "watch:compile": "lerna run watch:compile --stream --no-sort --concurrency 99",
    "watch:test": "jest --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^3.1.3",
    "@commitlint/config-angular": "^3.1.1",
    "@commitlint/config-lerna-scopes": "^3.1.1",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.24",
    "coveralls": "^2.13.1",
    "custom-tslint-formatters": "^2.1.1",
    "globby": "^6.1.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lerna": "^2.1.0",
    "lint-staged": "^4.0.4",
    "markdownlint": "^0.6.0",
    "npm-run-all": "^4.0.2",
    "prettier": "^1.5.3",
    "ts-config": "^12.0.0",
    "ts-jest": "^20.0.10",
    "tslint": "^5.6.0",
    "typescript": "^2.4.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/@cybernaut/*/src/**/*.{ts,tsx}",
      "!**/@cybernaut/*/src/**/tests/**/*.{ts,tsx}",
      "!**/@cybernaut/chrome/src/Chrome.ts",
      "!**/@cybernaut/mocks/src/**/*.{ts,tsx}",
      "!**/@cybernaut/types/src/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": ["js", "jsx", "json", "ts", "tsx"],
    "testMatch": ["**/@cybernaut/*/src/**/tests/**/*.{ts,tsx}"],
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "verbose": false
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --single-quote --no-bracket-spacing --parser typescript --write",
      "git add"
    ],
    "*.{js,jsx,json}": [
      "prettier --single-quote --no-bracket-spacing --write",
      "git add"
    ]
  }
}
