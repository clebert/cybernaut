{
  "name": "cybernaut",
  "private": true,
  "scripts": {
    "clean": "./scripts/clean.sh",
    "precommit": "lint-staged",
    "commit": "commit",
    "commitmsg": "commitlint --edit",
    "precompile": "lerna exec --ignore @cybernaut/examples -- rm -rf lib/",
    "compile": "lerna exec --ignore @cybernaut/examples -- tsc --project .",
    "postcompile": "lerna exec --ignore @cybernaut/examples -- rm -rf lib/tests/",
    "examples": "lerna exec --scope @cybernaut/examples -- jest --no-cache && node @cybernaut/examples/chrome/vanilla.js",
    "format": "./scripts/prettier.sh --write",
    "format:test": "./scripts/prettier.sh --list-different",
    "postinstall": "./scripts/copy.sh && lerna bootstrap",
    "lint": "node scripts/markdownlint.js && lerna exec --ignore @cybernaut/examples -- ../../scripts/lerna/tslint.sh",
    "prerelease": "npm run clean && npm install && npm test",
    "release": "lerna publish --skip-npm && lerna exec --ignore @cybernaut/examples -- npm publish --access=public",
    "postrelease": "git push --follow-tags origin master",
    "pretest": "npm run compile",
    "test": "npm run format:test && npm run lint && jest --no-cache && npm run examples",
    "upgrade": "ncu -ua && lerna exec -- ncu -ua",
    "watch": "run-p watch:*",
    "watch:compile": "lerna exec --ignore @cybernaut/examples --parallel --concurrency 99 -- tsc --project . --watch",
    "watch:test": "jest --watch"
  },
  "devDependencies": {
    "@commitlint/cli": "^3.1.3",
    "@commitlint/config-angular": "^3.1.1",
    "@commitlint/config-lerna-scopes": "^3.1.1",
    "@commitlint/prompt-cli": "^3.1.3",
    "@types/express": "^4.0.37",
    "@types/fs-extra": "^4.0.1",
    "@types/jest": "^20.0.8",
    "@types/node": "^8.0.26",
    "coveralls": "^2.13.1",
    "custom-tslint-formatters": "^2.1.1",
    "express": "^4.15.4",
    "fs-extra": "^4.0.1",
    "globby": "^6.1.0",
    "husky": "^0.14.3",
    "is-png": "^1.1.0",
    "jest": "^20.0.4",
    "lerna": "^2.1.2",
    "lint-staged": "^4.0.4",
    "markdownlint": "^0.6.0",
    "npm-check-updates": "^2.12.1",
    "npm-run-all": "^4.1.1",
    "portfinder": "^1.0.13",
    "prettier": "^1.6.1",
    "ts-config": "^13.0.0",
    "ts-jest": "^20.0.14",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/@cybernaut/*/src/**/*.{ts,tsx}",
      "!**/@cybernaut/*/src/**/tests/**/*.{ts,tsx}",
      "!**/@cybernaut/mocks/src/**/*.{ts,tsx}",
      "!**/@cybernaut/types/src/**/*.{ts,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "ts",
      "tsx"
    ],
    "testMatch": [
      "**/@cybernaut/*/src/**/tests/**/*.{ts,tsx}"
    ],
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "verbose": false
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --single-quote --no-bracket-spacing --parser typescript --write",
      "git add"
    ],
    "*.{js,jsx,json}": [
      "prettier --single-quote --no-bracket-spacing --write",
      "git add"
    ]
  }
}
